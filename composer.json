{
    "name": "schedulr/simple-mjml",
    "description": "Very simple wrapper around `mjml js tool` easy converting from PHP",
    "autoload": {
        "psr-4": {
            "Schedulr\\SimpleMjml\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "mykolakecha",
            "email": "mykola.kecha@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/process": "^5.4"
    },
    "scripts": {
        "post-package-install": "yarn",
        "post-install-cmd": "yarn",
        "test": "phpunit tests/ --colors always"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
